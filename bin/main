#!/usr/bin/env ruby
require_relative '../lib/game_logic'
require_relative '../lib/player_logic'

class Game
  include GameLogic
  attr_accessor :player1, :player2, :players

  def initialize()
    @player1 = Player.new
    @player2 = Player.new
    @players = [@player1, @player2]
    @game_over = false
    @counter = 0
    @choices = [1, 2, 3, 4, 5, 6, 7, 8, 9]
    @winner = 'VER'
  end
end