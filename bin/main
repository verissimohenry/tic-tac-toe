#!/usr/bin/env ruby
class Game
  attr_accessor :player1, :player2, :players

  def initialize()
    @player1 = nil
    @player2 = nil
    @players = {}
    @game_over = false
    @counter = 0
    @choices = [1, 2, 3, 4, 5, 6, 7, 8, 9]
    @winner = 'VER'
  end
end

def draw_board
  puts '+---+---+---+'
  puts "| #{@choices[0]} | #{@choices[1]} | #{@choices[2]} |"
  puts '+---+---+---+'
  puts "| #{@choices[3]} | #{@choices[4]} | #{@choices[5]} |"
  puts '+---+---+---+'
  puts "| #{@choices[6]} | #{@choices[7]} | #{@choices[8]} |"
  puts '+---+---+---+'
end

def initialize_game
  puts
  puts 'Welcome Gamers'
  puts
  puts 'Enter Player 1 name: '
  @player1 = gets.chomp
  @players['X'] = @player1
  puts 'Enter player 2 name: '
  @player2 = gets.chomp
  @players['O'] = @player2
  sleep(1)
  puts
  puts "#{@player1} will be O, and #{@player2} will be X."
  sleep(1)
  puts
  puts "Let's start!"
  puts
  sleep(1)
end
